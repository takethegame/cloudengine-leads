    <sql id="column">
        `id`, `name`, `create_Date`, `update_Date`, `phone_number`, `email`, `description`,`version`,
        `extend_info`, `is_delete`
    </sql>

    <insert id="insert" parameterType="com.cloudengine.dao.dataobject.LeadsDO">
        insert into leads
        (<include refid="column"/> )
        value (#{id}, #{name}, #{createDate}, #{updateDate}, #{phoneNumber}, #{email}, #{description}, #{version}, #{extendInfo}, #{isDelete});
        <selectKey keyProperty="id" keyColumn="id" order="AFTER" resultType="Long">
            select last_insert_id()
        </selectKey>
    </insert>

    <select id="queryByPhoneNumber" parameterType="String" resultType="com.cloudengine.dao.dataobject.LeadsDO">
        select
        <include refid="column"/>
        from leads
        where phone_number = #{phoneNumber}
    </select>

    <update id="update" parameterType="com.cloudengine.dao.dataobject.LeadsDO" >
        update leads
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            update_Date = now(),
            version = version + 1
        </set>
        where phone_number = #{phoneNumber} and version = #{version}
    </update>

